                </div>
                <div class="col-md-5">
                    <div class="content">
                        {{ form_start(form_d) }}
                        <div class="row">
                            <div class="col-md-9 col-sm-10" >
                                <div class="search-category-container" id="btn1" style="display:block;">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            {{ form_row(form_d.nonDepartement, {'attr': {'placeholder': 'votre nom'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 col-sm-6">
