                </div>
            </div>
        </div>
    </div>
    </section>
    <!-- end intro section -->
    </div>


    <!-- Blog Section -->
    <section id="blog" class="section">
        <!-- Container Starts -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h2 class="section-title">
                            Liste des employés
                        </h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% if t == null %}
                    {% for info in infos %}
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 blog-item">
                            <!-- Blog Item Starts -->
                            <div class="blog-item-wrapper">
                                <div class="col-sm-6">
                                    <div class="blog-item-img">
                                        <a href="#">
                                            <img class="img-member img-circle" src="assets/img/blog/home-items/img1.jpg" alt="" width="200px;">
                                        </a>
                                    </div>
                                </div>
                                <div class="blog-item-text">
                                    <div class="meta-tags">
                                        <font size="4px"><u>Nom </u> : {{info.employer.nom|upper  }}</font><br>
                                        <font size="4px"><u>Prénom </u> : {{info.employer.prenom|upper  }}</font><br>
                                        <font size="4px"><u>Adresse </u> : {{ info.adresse }}</font><br>
                                        <font size="4px">
                                            <u>Travaille à faire :</u><br>
                                            <font style="color: red;">
                                                {% for travaille in info.travaille  %}
                                                    {{ travaille.nonTravaille }},
                                                {% endfor %}
                                            </font>
                                        </font><br>
                                        <font size="4px">
                                            <u>Cérémonie:</u><br>
                                            <font style="color: red;">
                                                {% for ceremonie in info.ceremonie   %}
                                                    {{ ceremonie.nomCeremonie }},
                                                {% endfor %}
                                            </font>
                                        </font><br>
                                        <font size="4px">
                                            <u>Mode</u> : <font style="color: red;">{{ info.typeHeure.nonType }}</font>
                                        </font>
                                        <br>
                                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#{{ info.employer.id }}">Lire plus</button>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#{{ info.employer.username }}">Choisir</button>

                                        <!-- Modal -->
                                        <div id="{{ info.employer.id }}" class="modal fade" role="dialog">
                                            <div class="modal-dialog">

                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Contacter nous</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p style="font-size: 25px">
                                                            <u>Nom </u> : {{info.employer.nom|upper  }}
                                                            &ensp;  &ensp;  &ensp;  &ensp;  &ensp;  &ensp;
                                                            <u>Prénom </u> : {{info.employer.prenom|upper  }}
                                                        </p>
                                                        <p style="font-size: 25px">
                                                            <u>Situation matrimoniale </u> : {{ info.sm.nonSm }}
                                                        </p>
                                                        <p style="font-size: 25px">
                                                            <u>Niveau d'étude </u> : {{ info.niveauEtude.nonNiveau }}
                                                        </p>
                                                        <p style="font-size: 25px">
                                                            <u>Département </u> : {{info.employer.departement|upper  }}
                                                            &ensp;
                                                            <u>Age </u> : {{ info.age }}
                                                        </p>
                                                        <p style="font-size: 25px"><u>Nationalité </u> {{ info.employer.nationalite|upper }}</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Modal -->
                                        <div id="{{ info.employer.username }}" class="modal fade" role="dialog">
                                            <div class="modal-dialog">

                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Contacter nous</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                            <p style="font-size: 15px">
                                                                <input type="checkbox"><label>Confirmer le choix</label>
                                                            </p>
                                                            <p style="font-size: 25px">
                                                                <a href="{{ path('validation',{'id': info.employer.id}) }}" class="btn btn-primary">
                                                                    Valider
                                                                </a>
                                                            </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--Modale -->
                                    </div>
                                    <!--<a href="single-post.html" class="btn btn-common btn-rm">Lire plus</a>-->
                                </div>
                            </div>
                            <!-- Blog Item Wrapper Ends-->
                        </div>
                    {% endfor %}
                {% elseif t != null %}
                    {% set trouve = false %}
                    {% set employe = {} %}
                     {% for info in infos %}
                        {% for travaille in info.travaille %}
                                {% if travaille.nonTravaille == t %}
                                    {% set trouve = true %}
                                    {% set employe = employe|merge({(info.id):(info)}) %}
                                {% endif %}
                        {% endfor %}
                    {% endfor %}
                    {% if trouve == true %}
                        {% for key,info in employe %}
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 blog-item">
                                <!-- Blog Item Starts -->
                                <div class="blog-item-wrapper">
                                    <div class="col-sm-6">
                                        <div class="blog-item-img">
                                            <a href="#">
                                                <img class="img-member img-circle" src="assets/img/blog/home-items/img1.jpg" alt="" width="200px;">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="blog-item-text">
                                        <div class="meta-tags">
                                            <font size="2px"><u>Nom </u> : {{info.employer.nom|upper  }}</font><br>
                                            <i style="font-size: 15px"><u>Prénom </u> : {{info.employer.prenom|upper  }}</i><br>
                                            <i style="font-size: 15px"><u>Adresse </u> : {{ info.adresse }}</i><br>
                                            <i style="font-size: 15px">
                                                <u>Travaille à faire :</u><br>
                                                <font style="color: red;">
                                                    {% for travaille in info.travaille  %}
                                                        {{ travaille.nonTravaille }},
                                                    {% endfor %}
                                                </font>
                                            </i><br>
                                            <i style="font-size: 15px">
                                                <u>Cérémonie:</u><br>
                                                <font style="color: red;">
                                                    {% for ceremonie in info.ceremonie   %}
                                                        {{ ceremonie.nomCeremonie }},
                                                    {% endfor %}
                                                </font>
                                            </i><br>
                                            <i style="font-size: 15px">
                                                <u>Mode</u> : <font style="color: red;">{{ info.typeHeure.nonType }}</font>
                                            </i>

                                            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#{{ info.employer.username }}">Lire plus</button>

                                            <!-- Modal -->
                                            <div id="{{ info.employer.username }}" class="modal fade" role="dialog">
                                                <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            <h4 class="modal-title">Contacter nous</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p style="font-size: 25px">
                                                                <u>Nom </u> : {{info.employer.nom|upper  }}
                                                                &ensp;  &ensp;  &ensp;  &ensp;  &ensp;  &ensp;
                                                                <u>Prénom </u> : {{info.employer.prenom|upper  }}
                                                            </p>
                                                            <p style="font-size: 25px">
                                                                <u>Situation matrimoniale </u> : {{ info.sm.nonSm }}
                                                            </p>
                                                            <p style="font-size: 25px">
                                                                <u>Niveau d'étude </u> : {{ info.niveauEtude.nonNiveau }}
                                                            </p>
                                                            <p style="font-size: 25px">
                                                                <u>Département </u> : {{info.employer.departement|upper  }}
                                                                &ensp;
                                                                <u>Age </u> : {{ info.age }}
                                                            </p>
                                                            <p style="font-size: 25px"><u>Nationalité </u> {{ info.employer.nationalite|upper }}</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!--<a href="single-post.html" class="btn btn-common btn-rm">Lire plus</a>-->
                                    </div>
                                </div>
                                <!-- Blog Item Wrapper Ends-->
                            </div>
                         {% endfor %}
                    {% else %}
                        <p>Pas de menagère trouver</p>
                    {% endif %}
                {% endif %}

                </div>
            </div>
        </div>
    </section>
    <!-- blog Section End -->
