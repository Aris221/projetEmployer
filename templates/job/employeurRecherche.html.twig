                                            {{ form_row(form.nonTravaille, {'attr': {'placeholder': 'votre nom'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1 col-sm-6">
                                    <button type="submit" class="btn btn-search-icon"><i class="ti-search"></i></button>
